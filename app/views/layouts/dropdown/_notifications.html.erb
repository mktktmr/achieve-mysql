<li>
  <%= link_to user_notifications_path(current_user), class: 'dropdown-toggle', 
      data: { toggle: 'dropdown' }, role: 'button', aria: { haspopup: 'true', expanded: 'false' } do %>
    <span id="unreadcount"><%= @notifications_count %></span>
    <i class="fa fa-bell fa-1x"><div id="messagelog"></div></i>
    <span class="caret"></span>
  <% end %>
  
  <ul class="dropdown-menu">
    <div class="notification"><%= render 'notifications/index', notifications: @notifications %></div>
    <li><%= link_to '全て見る', user_notifications_path(current_user) %></li>
  </ul>
</li>
