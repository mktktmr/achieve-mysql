<% if @submit_requests.present? %>
    <div class="task col-md-10 col-md-offset-1 col-sm-10 col-sm-offset-1 col-xs-12 table-responsive">
      <table class="table table-hover">
        <thead>
        <tr>
          <th>登録者</th>
          <th>タイトル</th>
          <th>担当者</th>
          <th>依頼日</th>
          <th>ステータス</th>
          <th>状況</th>
          <th></th>
          <th></th>
        </tr>
        </thead>
        <tbody>
        <% submit_requests.each do |submit_request| %>
            <tr>
              <td><%= submit_request.user.name if submit_request.user.present? %></td>
              <td><%= submit_request.task.title %></td>
              <% if submit_request.charge_id == current_user.id %>
                  <td>(自分)</td>
              <% else %>
                  <td><%= submit_request.charger.name %></td>
              <% end %>
              <td><%= submit_request.created_at.strftime("%y/%m/%d") %></td>
              <td><%= status_display_name(submit_request.status) %></td>
              <td><%= done_display_name(submit_request.task.done) %></td>
              <td data-featherlight="#<%= (submit_request.id) %>"><%= link_to 'メッセージ', submit_request_path(submit_request) %></td>
              <% if submit_request.charge_id == current_user.id %>
                  <td>
                    <%= link_to '承認', submit_request_approve_path(submit_request), remote: true %>
                    <%= link_to '却下', submit_request_unapprove_path(submit_request), remote: true %>
                    <%= link_to '依頼を却下する', submit_request_reject_path(submit_request), data: submit_request.id, remote: true if submit_request.status == 1 %>
                  </td>
              <% end %>
              <% if submit_request.user_id == current_user.id %>
                  <td>
                    <%= link_to '編集', edit_submit_request_path(submit_request) %>
                    <%= link_to '削除', submit_request_path(submit_request), method: :delete, remote: true, data: { confirm: '本当に削除していいですか？' } %>
                  </td>
              <% end %>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>
<% end %>
