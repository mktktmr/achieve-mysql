<div class="container">
  <div class="wrapper col-md-4 col-md-offset-4 col-sm-10">

    <h2>Forgot your password?</h2>
    
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= f.error_messages! %>
    
      <div class="field form-group">
        <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'メールアドレス' %>
      </div>
    
      <div class="actions">
        <%= f.submit "Send me reset password instructions", class: 'btn btn-primary btn-block' %>
      </div>
    <% end %>
    
    <%= render "devise/shared/links" %>

  </div>
</div>
