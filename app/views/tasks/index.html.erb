<div class="container">
  <p id="notice"><%= notice %></p>
  
  <h1>Listing Tasks</h1>
  
  <table class="table">
    <thead>
      <tr>
        <th>User</th>
        <th>Title</th>
        <th>Content</th>
        <th>Deadline</th>
        <th>Charge</th>
        <th>Done</th>
        <th>Status</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= task.user.name %></td>
          <td><%= task.title %></td>
          <td><%= simple_format task.content %></td>
          <td><%= task.deadline %></td>
          <td><%= task.charge_id %></td>
          <td><%= if task.done? then "完了" else "未完了" end %></td>
          <td><%= task.status == 1? "対応中" : "未着手" %></td>
          <td><%= link_to 'Show', user_task_path(task.user, task), class: 'btn btn-primary btn-xs' %></td>
          <td><%= link_to 'Edit', edit_user_task_path(task.user, task), class: 'btn btn-primary btn-xs' %></td>
          <td><%= link_to 'Destroy', user_task_path(task.user, task), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
  <br>
  
  <%= link_to 'New Task', new_user_task_path(@user), class: 'btn btn-primary' %>
</div>
