<%= form_for @blog, url: choose_new_or_edit do |f| %>
  <%= f.error_messages! %>

  <%= f.label 'タイトル' %>
  <%= f.text_field :title, class: 'form-control' %>
  <br>
  <%= f.label '内容' %>
  <%= f.text_field :content, class: 'form-control' %>
  <br>
  
  <%= f.submit '投稿', class: 'btn btn-primary btn-block' %>
<% end %>

<%= link_to "ブログ一覧画面にもどる", blogs_path %>
