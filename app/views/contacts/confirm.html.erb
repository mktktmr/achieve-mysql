<div class="container">
  <div class="col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">

    <h3>以下の内容で送信する。</h3>

    <%= form_for @contact do |f| %>
      <%= f.hidden_field :name %>
      <%= f.hidden_field :email %>
      <%= f.hidden_field :content %>
    
      <label>Name</label><p><%= @contact.name %></p>
      <label>Email</label><p><%= @contact.email %></p>
      <label>Content</label><%= simple_format @contact.content %>
      <%= f.submit "登録する", class: 'btn btn-primary btn-block' %>
    <% end %>
    
    <%= form_for(@contact, url: new_contact_path, method: 'get') do |f| %>
      <%= f.hidden_field :name %>
      <%= f.hidden_field :email %>
      <%= f.hidden_field :content %>
      <%= f.submit "もどる", name: :back, class: 'btn btn-default btn-block' %>
    <% end %>
  </div>
</div>
