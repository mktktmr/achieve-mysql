<div class="container">
  <div class="col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">

    <h1>お問い合わせフォーム</h1>
    <%= form_for @contact, url: confirm_contacts_path, method: :post do |f| %>
      <%= f.error_messages! %>

      <%= f.label :name  %>
      <%= f.text_field :name, class: 'form-control' %>
      <br>
      <%= f.label :email  %>
      <%= f.email_field :email, class: 'form-control' %>
      <br>
      <%= f.label :content  %>
      <%= f.text_area :content, size: '30x7', class: 'form-control' %>
      <br>
      <%= f.submit "確認", class: 'btn btn-primary'%>
    <% end %>
  </div>
</div>
